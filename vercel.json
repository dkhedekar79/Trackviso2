{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api|sitemap.xml|robots.txt|.*\\..*).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/webhook.js": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        },
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    }
  ]
}
